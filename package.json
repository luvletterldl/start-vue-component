{
  "name": "@vue-component/monorepo",
  "type": "module",
  "version": "0.0.0",
  "private": true,
  "packageManager": "pnpm@10.20.0",
  "author": "",
  "license": "ISC",
  "keywords": [],
  "scripts": {
    "lint": "eslint .",
    "format": "eslint . --fix",
    "typecheck": "tsc --noEmit",
    "build": "pnpm pb && pnpm -r build",
    "build:ui": "cd packages/ui && pnpm run build",
    "build:doc": "cd packages/doc && pnpm run build",
    "dev:ui": "cd packages/ui && pnpm run dev",
    "dev": "cd packages/doc && pnpm run dev",
    "pb": "pnpm format && pnpm typecheck",
    "publish": "pnpm -r publish",
    "release": "bumpp -r",
    "up": "taze major -I -r",
    "postinstall": "npx simple-git-hooks"
  },
  "dependencies": {
    "@antfu/eslint-config": "catalog:",
    "@types/node": "catalog:",
    "@unocss/reset": "catalog:",
    "@unocss/transformer-directives": "catalog:",
    "@unocss/transformer-variant-group": "catalog:",
    "@vitejs/plugin-basic-ssl": "catalog:",
    "@vitejs/plugin-vue": "catalog:",
    "@vitest/ui": "catalog:",
    "@vueuse/core": "catalog:",
    "bumpp": "catalog:",
    "changelogen": "catalog:",
    "eslint": "catalog:",
    "highlight.js": "catalog:",
    "jsdom": "catalog:",
    "lightningcss": "catalog:",
    "lint-staged": "catalog:",
    "markdown-it-anchor": "catalog:",
    "pnpm": "catalog:",
    "pre-commit": "catalog:",
    "simple-git-hooks": "catalog:",
    "taze": "catalog:",
    "tsdown": "catalog:",
    "typescript": "catalog:",
    "unocss": "catalog:",
    "unplugin-auto-import": "catalog:",
    "unplugin-icons": "catalog:",
    "unplugin-vue-components": "catalog:",
    "unplugin-vue-markdown": "catalog:",
    "vite": "catalog:",
    "vite-plugin-css-injected-by-js": "catalog:",
    "vite-plugin-dts": "catalog:",
    "vite-plugin-pages": "catalog:",
    "vite-plugin-vue-devtools": "catalog:",
    "vitest": "catalog:",
    "vue": "catalog:",
    "vue-router": "catalog:"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
